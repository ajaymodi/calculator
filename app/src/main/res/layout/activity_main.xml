<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:textSize="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="8"
        android:id="@+id/button8"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="9"
        android:id="@+id/button9"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="5"
        android:id="@+id/button5"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="3"
        android:id="@+id/button3"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="6"
        android:id="@+id/button6"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/button3"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="1"
        android:id="@+id/button1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="4"
        android:id="@+id/button4"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="2"
        android:id="@+id/button2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/buttonC"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="0"
        android:id="@+id/button0"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="."
        android:id="@+id/buttondot"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="="
        android:id="@+id/buttoneql"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button2" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="/"
        android:id="@+id/buttondiv"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="*"
        android:id="@+id/buttonmul"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/buttondiv"
        android:layout_alignLeft="@+id/buttondiv"
        android:layout_alignStart="@+id/buttondiv" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="-"
        android:id="@+id/buttonmin"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/buttonmul"
        android:layout_alignStart="@+id/buttonmul" />

    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:text="+"
        android:id="@+id/buttonsum"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/buttonmin"
        android:layout_alignStart="@+id/buttonmin" />

</RelativeLayout>
